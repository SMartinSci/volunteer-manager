<h1><%= @role.user.name %>'s New Role</h1>
<h2><%= @role.project.name %> Project </h2>
<h2> Role Name: <%= @role.name %></h2><br>


<% if current_user.roles.include?(@role) %>
    <%= link_to "Delete Role", role_path(@role), :confirm => "Are you sure?", :method => :delete, class: "delete-link"%></br></br>
    <%= link_to "All tasks", role_tasks_path(@role) %><br></br>
    <%= link_to "Add new tasks", new_role_task_path(@role) %><br></br>
<% end %>
     
