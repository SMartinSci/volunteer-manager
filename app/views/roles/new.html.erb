<h1>Add a new role</h1>

<%= form_for [current_user, @park] do |f| %>
    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>

<% end %>
<%= f.hidden_field :user_id, :value => current_user.id%>
<%= f.hidden_field :project_id, :value => params[:project_id]%>
      <%= f.submit "Submit", class:"submit" %>
<% end %>


